<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sdxess_layout_margin_right"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginRight="@dimen/sdxess_layout_margin_right"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left"
        android:text="Server"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sdxess_layout_margin_right"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginRight="@dimen/sdxess_layout_margin_right"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="@dimen/sdxess_layout_margin_top"
        android:adjustViewBounds="false"
        android:src="@drawable/title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Spinner
        android:id="@+id/serverCombo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sdxess_layout_margin_right"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginRight="@dimen/sdxess_layout_margin_right"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/upgrade_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sdxess_layout_margin_right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/upgrade_link"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serverCombo" />

    <CheckBox
        android:id="@+id/allTrafficChb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="@dimen/sdxess_layout_margin_top"
        android:text="Redirect All Traffic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serverCombo" />

    <Button
        android:id="@+id/addDomainBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sdxess_layout_margin_bottom"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:text="Add Domain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginEnd="@dimen/sdxess_layout_margin_right"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginRight="@dimen/sdxess_layout_margin_right"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <TableLayout
            android:id="@+id/domainsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:weightSum="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">



        </TableLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sdxess_layout_margin_right"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginRight="@dimen/sdxess_layout_margin_right"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="70dp"
        android:text="Routed Domains"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serverCombo" />

    <Button
        android:id="@+id/connectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sdxess_layout_margin_bottom"
        android:layout_marginRight="@dimen/sdxess_layout_margin_right"
        android:text="Connect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/sdxess_layout_margin_right" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/loader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/consoleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sdxess_layout_margin_bottom_small"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        app:layout_constraintBottom_toTopOf="@+id/addDomainBtn"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>