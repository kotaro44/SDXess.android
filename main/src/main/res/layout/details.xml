<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sdxess_layout_margin_right"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginRight="@dimen/sdxess_layout_margin_right"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="@dimen/sdxess_layout_margin_top"
        android:adjustViewBounds="false"
        android:src="@drawable/title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="@dimen/sdxess_layout_margin_top"
        android:text="Domain Name:"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left" />

    <TextView
        android:id="@+id/domainLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="@dimen/sdxess_layout_margin_top"
        android:text="google.com"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="@dimen/sdxess_layout_margin_top_small"
        android:text="Tracked  IP:"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left" />

    <TextView
        android:id="@+id/ipLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="@dimen/sdxess_layout_margin_top_small"
        android:text="127.0.0.1"
        app:layout_constraintLeft_toRightOf="@+id/textview"
        app:layout_constraintTop_toBottomOf="@+id/domainLbl"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="@dimen/sdxess_layout_margin_top_small"
        android:text="ASN:"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left" />

    <TextView
        android:id="@+id/asnLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="@dimen/sdxess_layout_margin_top_small"
        android:text="AS00000"
        app:layout_constraintLeft_toRightOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/ipLbl"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="@dimen/sdxess_layout_margin_top_small"
        android:text="# of IP Ranges:"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left" />

    <TextView
        android:id="@+id/rangesLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="@dimen/sdxess_layout_margin_top_small"
        android:text="250"
        app:layout_constraintLeft_toRightOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/asnLbl"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="@dimen/sdxess_layout_margin_top_small"
        android:text="Description:"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left" />

    <TextView
        android:id="@+id/descLbl"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="@dimen/sdxess_layout_margin_top_small"
        android:text="lorem itsum"
        app:layout_constraintLeft_toRightOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/rangesLbl" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sdxess_layout_margin_bottom"
        android:layout_marginEnd="@dimen/sdxess_layout_margin_right"
        android:layout_marginRight="@dimen/sdxess_layout_margin_right"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginEnd="@dimen/sdxess_layout_margin_right"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginRight="@dimen/sdxess_layout_margin_right"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left"
        android:layout_marginTop="@dimen/sdxess_layout_margin_top"
        android:weightSum="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descLbl">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IP Address"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subnet Mask"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:id="@+id/ipTableLayout"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginEnd="@dimen/sdxess_layout_margin_right"
        android:layout_marginLeft="@dimen/sdxess_layout_margin_left"
        android:layout_marginRight="@dimen/sdxess_layout_margin_right"
        android:layout_marginStart="@dimen/sdxess_layout_margin_left"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <TableLayout
            android:id="@+id/ipTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TableLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>